<% include partials/header %>

<div class="container-fluid">
<div class="row">
<div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
    <li><a href="/admin/people">Users</a></li>
    <li class="active"><a href="/admin/places">Places</a></li>
    <li><a href="/admin/visits">Visits</a></li>
    <li><a href="#">Export and Backup</a></li>
    </ul>
</div>

    <div id="req-path">/admin/places/all</div>
    <div id="req-type">places</div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

        <h1 class="page-header">Dashboard</h1>

        <div id="serverMessage" class="alert alert-danger" role="alert">
          <span><i class="fa fa-exclamation-circle" aria-hidden="true"></i></span>
          <span class="sr-only">Error:</span>
        </div>

        <form class="" id="placeAddForm" action="/admin/places/add" method="POST">
            <div class="row">
                <div class="form-group col-xs-5">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Place Name" required>
                </div>
                <div class="form-group col-xs-5">
                  <label for="sel1">Type of Place</label>
                  <select name="place_type" required class="form-control" id="sel1">
                    <option>Play</option>
                    <option>Eat</option>
                    <option>Shop</option>
                    <option>Other</option>
                  </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-4">
                    <label>Street Address</label>
                    <input type="text" name="street" class="form-control" placeholder="222 Main Ave" required>
                </div>
                <div class="form-group col-xs-2">
                    <label>City</label>
                    <input type="text" name="city" class="form-control" placeholder="Leave blank if Scranton" value="Scranton">
                </div>
                <div class="form-group col-xs-2">
                    <label>State</label>
                    <input type="text" name="state" class="form-control" placeholder="Leave blank if Pennsylvania" value="Pennsylvania">
                </div>
                <div class="form-group col-xs-2">
                    <label>Zipcode</label>
                    <input type="text" name="zipcode" class="form-control" placeholder="zipcode" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-2">
                    <label>Phone</label>
                    <input type="tel" name="phone" class="form-control" placeholder="5701111111" required>
                </div>
                <div class="form-group col-xs-2">
                  <label for="sel1">Cost</label>
                  <select name="cost" required class="form-control" id="sel1">
                    <option>Free</option>
                    <option>$</option>
                    <option>$$</option>
                    <option>$$$</option>
                  </select>
                </div>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea type="text" name="description" class="form-control" placeholder="Describe the place here."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <h2 class="sub-header">Export to Excel</h2>
         <button id="btnExport" type="submit" class="btn btn-primary">Export as xls file</button>

        <h2 class="sub-header">Places</h2>
            <ul class="list-inline">
                <li><button type="submit" class="btn btn-primary" onClick="getAll()">Show All</button></li>
                <li><button type="submit" class="btn btn-primary" onClick="getPlay()">Show Play</button></li>
                <li><button type="submit" class="btn btn-primary" onClick="getShop()">Show Shop</button></li>
                <li><button type="submit" class="btn btn-primary" onClick="getEat()">Show Eat</button></li>
                <li><button type="submit" class="btn btn-primary" onClick="getOther()">Show Other</button></li>
            </ul>
        <div id="table-wrapper" class="table-responsive">
        <table id="mainTable" class="table table-striped">
            <thead>
            <tr>
                <th class="id">#</th>
                <th>Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zipcode</th>
                <th>Description</th>
                <th>Cost</th>
                <th>Phone</th>
                <th>Type</th>
            </tr>
            </thead>
            <tbody id="bodyTable">
            <tr>

            </tr>

            </tbody>
        </table>
        </div>
    </div>
    </div>
</div>

<% include partials/footer %>