    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Edit <%=placeDetails.name %></h1>
        <div class="id"> <%= placeDetails.id %> </div>
        
        <div id="serverMessage" class="alert alert-danger" role="alert">
          <span><i class="fa fa-exclamation-circle" aria-hidden="true"></i></span>
          <span class="sr-only">Error:</span>
        </div>

        <div class="panel panel-default col-xs-5">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Current Name:</b> <%=placeDetails.name %></h3>
            </div>
            <div class="panel-body">
            
             <form class="" id="placeEdit" action="/admin/places/edit/<%=placeDetails.id%>/name" method="POST">
             <div class="row">
                <div class="form-group col-xs-5">
                    <label>Change Name</label>
                    <input type="text" name="data" class="form-control" placeholder="Place Name" required>
                </div>
             </div>
            <button type="submit" class="btn btn-primary">Submit Edit</button>
             </form>
             </div>
        </div>

        <div class="panel panel-default col-xs-5">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Type of Place:</b> <%=placeDetails.place_type %></h3>
            </div>
            <div class="panel-body">
            
             <form class="" id="placeEdit" action="/admin/places/edit/<%=placeDetails.id%>/place_type" method="POST">
             <div class="row">
                <div class="form-group col-xs-5">
                    <label>Change Type</label>
                    <select name="data" required class="form-control" id="sel1">
                        <option>Play</option>
                        <option>Eat</option>
                        <option>Shop</option>
                        <option>Other</option>
                    </select>
                </div>
             </div>
            <button type="submit" class="btn btn-primary">Submit Edit</button>
             </form>
             </div>
        </div>

        <div class="panel panel-default col-xs-5">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Current Cost:</b> <%=placeDetails.cost %></h3>
            </div>
            <div class="panel-body">
            
             <form class="" id="placeEdit" action="/admin/places/edit/<%=placeDetails.id%>/cost" method="POST">
             <div class="row">
                <div class="form-group col-xs-5">
                    <label>Change Type</label>
                    <select name="data" required class="form-control" id="sel1">
                        <option>free</option>
                        <option>$</option>
                        <option>$$</option>
                        <option>$$$</option>
                    </select>
                </div>
             </div>
            <button type="submit" class="btn btn-primary">Submit Edit</button>
             </form>
             </div>
        </div>

