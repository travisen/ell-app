<% include partials/header %>

<div class="container-fluid">
<div class="row">
<div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
    <li><a href="#">Home</span></a></li>
    <li><a href="/admin/stats">Stats</span></a></li>
    <li><a href="/admin/people">Users</a></li>
    <li class="active"><a href="/admin/places">Places</a></li>
    <li><a href="/admin/visits">Visits</a></li>
    <li><a href="#">Export and Backup</a></li>
    </ul>
</div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Edit <%=placeDetails.name %></h1>
        
        <div id="serverMessage" class="alert alert-danger" role="alert">
          <span><i class="fa fa-exclamation-circle" aria-hidden="true"></i></span>
          <span class="sr-only">Error:</span>
        </div>

        <form class="" id="placeAddForm" action="/admin/places/edit" method="POST">
            <div class="row">
                <div class="form-group col-xs-5">
                    <label>Name</label>                    
                    <input type="text" name="name" class="form-control" value=<%=placeDetails.name %> required>
                </div>
                <div class="form-group col-xs-5">
                  <label for="sel1">Type of Place</label>
                  <select name="place_type" required class="form-control" id="sel1">
                    <option>Play</option>
                    <option>Eat</option>
                    <option>Shop</option>
                    <option>Other</option>
                  </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-4">
                    <label>Street Address</label>
                    <input type="text" name="street" class="form-control" value=<%=placeDetails.street_address %> required>
                </div>
                <div class="form-group col-xs-2">
                    <label>City</label>
                    <input type="text" name="city" class="form-control" placeholder="Leave blank if Scranton" value="Scranton">
                </div>
                <div class="form-group col-xs-2">
                    <label>State</label>
                    <input type="text" name="state" class="form-control" placeholder="Leave blank if Pennsylvania" value="Pennsylvania">
                </div>
                <div class="form-group col-xs-2">
                    <label>Zipcode</label>
                    <input type="text" name="zipcode" class="form-control" value=<%=placeDetails.zipcode %> required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-2">
                    <label>Phone</label>
                    <input type="tel" name="phone" class="form-control" value=<%=placeDetails.phone %> required>
                </div>
                <div class="form-group col-xs-2">
                  <label for="sel1">Cost</label>
                  <select name="cost" required class="form-control" id="sel1">
                    <option>Free</option>
                    <option>$</option>
                    <option>$$</option>
                    <option>$$$</option>
                  </select>
                </div>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea type="text" name="description" class="form-control" value=<%=placeDetails.description %>></textarea>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    </div>
</div>

</body>
</html>