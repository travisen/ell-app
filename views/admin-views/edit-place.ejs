<% include partials/header %>

<div class="container-fluid">
<div class="row">
<div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
    <li><a href="#">Home</span></a></li>
    <li><a href="/admin/stats">Stats</span></a></li>
