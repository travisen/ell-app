             </form>
             </div>
        </div>

        <div class="panel panel-default col-xs-5">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Current Phone:</b> <%=placeDetails.phone %></h3>
            </div>
            <div class="panel-body">
            
             <form class="" id="placeEdit" action="/admin/places/edit/<%=placeDetails.id%>/phone" method="POST">
             <div class="row">
                <div class="form-group col-xs-5">
                    <label>Change Phone</label>
                    <input type="text" name="data" class="form-control" placeholder="phone" required>
