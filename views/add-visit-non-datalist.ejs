<% include partials/header %>
	<h2>Add a fun place you went to for points!</h2>
	<div id="serverMessage" class="alert alert-danger" role="alert">
	  <span><i class="fa fa-exclamation-circle" aria-hidden="true"></i></span>
	  <span class="sr-only">Error:</span>
	</div>
	<form id="visitForm" action="/add-visit" method="POST">

	  <div class="form-group">
	    <label>Your First Name</label>
	    <input type="text" name="firstName" class="form-control" placeholder="First Name" required>
		</div>
		
		<div class="form-group">
	    <label>Your Last Name</label>
	    <input type="text" name="lastName" class="form-control" placeholder="Last Name" required>
		</div>

	  <div class="form-group">
	  	<label>Place Name</label>
	  	<input id="places" name="place" class="form-control" type="text" list="places" value="<%=place%>"required>
	  </div>

	  <div class="form-group">
	    <label>Date</label>
	    <input type="date" name="date" class="form-control" placeholder="Place" min="2017-06-01" max="<%=currentDate %>"  value="<%=currentDate %>" required>
	  </div>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>

	<script type="text/javascript" src="/javascript/add-visit-client.js"></script>

<% include partials/footer %>