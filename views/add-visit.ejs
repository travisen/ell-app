<% include partials/header %>
	<h2>Add a fun place you went to for points!</h2>
	<div class="alert alert-danger <%=isVis%>" role="alert">
	  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
	  <span class="sr-only">Error:</span>
	  <%= errMsg %>
	</div>
	<form action="/add-visit" method="POST">

	  <div class="form-group">
	    <label>Your Name</label>
	    <input type="text" name="name" class="form-control" placeholder="First Name" required>
	  </div>
	  <div class="form-group">
	  	<label>Place Name</label>
	  	<input id="places" name="place" class="form-control" type="text" list="places" value="<%=place%>"required>
	  </div>
	  <div class="form-group">
	    <label>Date</label>
	    <input type="date" name="date" class="form-control" placeholder="Place" min="2017-06-01" max="<%=currentDate %>"  value="<%=currentDate %>" required>
	  </div>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>


	<!--<script> $(".chosen-select").chosen() </script>-->

<% include partials/footer %>